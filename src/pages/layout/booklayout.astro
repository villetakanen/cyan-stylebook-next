---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Cards">
  <main>
    <div class="bookLayout">
      <article class="Column large hero">
        <img src="/proprietary/images/example_1.jpeg" alt="hero" class="hero" />
        <h1>BookLayout</h1>
      </article>
      <article class="Column small">
        <h2>A Small Column</h2>
    </div>
    <div class="bookLayout">
      <article class="Column">
        <h2>Column</h2>
      </article>
      <article class="Column">
        <h2>Column</h2>
      </article>
    </div>
  </main>
</Layout>
<style lang="sass">
.Column
  border: 1px dashed var(--chroma-alert, cyan)
.Column.hero
  .hero + h1
    margin-top: 0
    border-bottom: 1px solid var(--chroma-separator, cyan)
</style>