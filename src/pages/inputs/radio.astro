---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="CDS / Inputs / Reaction Buttons">
  <main class="bookLayout">
    <!-- intro card -->
    <article class="Column small">
      <cn-card
        title="Radio Buttons"
        noun="card"
        snippet="Styling for the standard HTML radio button."
      />
    </article>
    <article class="Column">
      <h3>Example</h3>
      <fieldset>
        <legend>Radio Buttons</legend>
        <label>
          <input type="radio" name="radio" value="radio-1" checked />
            Radio 1
        </label>
        <label>
          <input type="radio" name="radio" value="radio-2" />
            Radio 2
        </label><br>
        <label>
            <input type="radio" name="radio" value="radio-3" />
                Radio 3
        </label>
      </fieldset>
    </article>
  </main>
</Layout>
          