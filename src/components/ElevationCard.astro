<script lang="javascript">
function setElevation(e) {
  var card = document.getElementById('ElevationCardDemo');
  card.setAttribute('elevation', e);
  console.log('elevation', e);
}
</script>

<cn-card elevation="0" id="ElevationCardDemo">
  <h4>Elevation Demo</h4>
  <fieldset class="fieldset">
    <legend>Legend</legend>
    <label>
      <input type="radio" name="elevation" value="0" checked onclick="setElevation(0)">
      0
    </label>
    <label>
      <input type="radio" name="elevation" value="1" onclick="setElevation(1)">
      1
    </label>
    <label>
      <input type="radio" name="elevation" value="2" onclick="setElevation(2)">
      2
    </label>
    <label>
      <input type="radio" name="elevation" value="3" onclick="setElevation(3)">
      3
    </label>
  </fieldset>
</cn-card>
