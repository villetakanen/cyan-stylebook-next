---
import Rail from '../components/Rail.astro';
import Tray from '../components/Tray.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;

const production = false;
const cyan_elements = production ? 'https://unpkg.com/@11thdeg/cyan@0.33.3/dist/cyan.js' : '/src/cyan-elements/src/index.ts';
const cyan_elements_css = production ? 'https://unpkg.com/@11thdeg/cyan@0.33.3/dist/style.css' : '';

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href={cyan_elements_css} />
		<script type="module" src={cyan_elements}></script>
		<title>{title}</title>
	</head>
	<body class="cyan cyan--themed cyan--mode--dark">
		<Rail />
		<Tray />
		<div class="AppLayout">
		  <cyan-top-app-bar title="aaa">
		    <h3>Cyan Design System</h3>
			<cyan-spacer/>
			<cyan-lightmode-toggle />
		  </cyan-top-app-bar>
		  <slot />
		  <footer>
			...
		  </footer>
		</div>
	</body>
</html>
