---
import Rail from '../components/Rail.astro';
import Tray from '../components/Tray.astro';
import AppBar from '../components/AppBar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;

const production = true;
const cyan_elements = production ? 'https://unpkg.com/@11thdeg/cyan@0.36.6/dist/cyan.js' : '/src/cyan-elements/src/index.ts';
const cyan_elements_css = production ? 'https://unpkg.com/@11thdeg/cyan@0.36.6/dist/style.css' : '';

---

<!DOCTYPE html>
<html lang="en">
  <head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />

	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="stylesheet" href={cyan_elements_css} />

	<script type="module" src={cyan_elements}></script>
	<script type="module" src="https://unpkg.com/marked@4.2.12/marked.min.js"></script>

    <!-- Google fonts for Cyan-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto+Mono:wght@500&display=swap" rel="stylesheet">
    <!-- end Google fonts for Cyan-->
    
	<title>{title}</title>
  </head>

  <body class="cyan cyan--themed cyan--mode--dark dark">
	<Rail />
	<Tray />
	<div class="AppLayout">
	  <AppBar />
      <slot />
	  <footer>
		...
	  </footer>
	</div>
  </body>
</html>
